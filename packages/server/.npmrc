# Offline installation configuration
# CRITICAL: Block ALL sharp binary downloads and build attempts

# Block ALL sharp download sources
sharp_binary_host=https://127.0.0.1:1
sharp_libvips_binary_host=https://127.0.0.1:1
sharp_libvips_download_all=false
sharp_ignore_global_libvips=true

# CRITICAL: Disable native module build
# Sharp will be installed but won't try to compile native code
build_from_source=false

# Prevent node-gyp from running
python=none
node_gyp=none

# Don't fail on missing optional dependencies
optional=false

# Allow insecure connections to localhost
strict-ssl=false

# Force npm to NOT try to build native modules
npm_config_build_from_source=false
ignore-scripts=false
