{
  "name": "@leon4s4/memorizer-server",
  "version": "2.0.0",
  "description": "Airgapped AI memory service with embedded models - semantic search, versioning, MCP integration",
  "keywords": [
    "memory",
    "ai",
    "semantic-search",
    "embeddings",
    "llm",
    "mcp",
    "model-context-protocol",
    "vector-database",
    "knowledge-management",
    "airgapped",
    "local-first",
    "transformers",
    "llama"
  ],
  "type": "module",
  "bin": {
    "memorizer": "./dist/cli.js"
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "files": [
    "dist",
    "scripts/postinstall.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node build.js",
    "dev": "tsx watch src/cli.ts start --port 5000",
    "start": "node dist/cli.js",
    "postinstall": "node scripts/postinstall.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Leon4s4/memorizer-ts.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/Leon4s4/memorizer-ts/issues"
  },
  "homepage": "https://github.com/Leon4s4/memorizer-ts#readme",
  "author": "Leon4s4",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "@lancedb/lancedb": "^0.22.3",
    "@leon4s4/memorizer-shared": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.2",
    "commander": "^12.1.0",
    "fastify": "^5.2.0",
    "lru-cache": "^11.0.2",
    "node-llama-cpp": "^3.2.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "uuid": "^11.0.3"
  },
  "optionalDependencies": {
    "bullmq": "^5.34.0",
    "ioredis": "^5.4.2"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.27.1",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
